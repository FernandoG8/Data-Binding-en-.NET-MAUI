<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionPractica.FormPage"
             Title="FormPage">
    <VerticalStackLayout>
        <Label Text="Formulario para agregar una persona"
               FontSize="25"
               
              
               />
        <Entry
            Grid.Column="1"
            Grid.Row="0"
            Keyboard="Numeric"
            Placeholder="Nombre"
            VerticalOptions="Center"
            x:Name="nombre"/>
        <Entry
            Grid.Column="1"
            Grid.Row="0"
            Keyboard="Numeric"
            Placeholder="Apellido"
            VerticalOptions="Center"/>


        <HorizontalStackLayout>
            <RadioButton Content="Masculino" GroupName="Sexo" Value="M" />
            <RadioButton Content="Femenino" GroupName="Sexo" Value="F" />
        </HorizontalStackLayout>
            <DatePicker/>
        <Picker  />
        <Entry Placeholder="IdRol"/>

        <Button
            Text="Guardar Persona"/>

    </VerticalStackLayout>
</ContentPage>